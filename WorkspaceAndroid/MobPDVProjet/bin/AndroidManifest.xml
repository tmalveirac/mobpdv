<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.android.mobpdv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.android.mobpdv.view.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >

        </activity>
        <activity
            android:name="br.android.mobpdv.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.android.mobpdv.view.CicloVidaActivity"
            android:label="@string/title_activity_ciclo_vida" >
        </activity>
        <activity
            android:name="br.android.mobpdv.view.VendaActivity"
            android:label="@string/title_activity_venda" >
        </activity>
        <activity
            android:name="br.android.mobpdv.view.CardapioActivity"
            android:label="@string/title_activity_cardapio" >
        </activity>
    </application>

</manifest>